<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>

  <body>
    <header>
      <h1>IVEA</h1>
      <h3>Furniture Store</h3>
    </header>
    <main class="Update Create">
      <h1>Create Item</h1>
      <form action="/item/create" method="POST">
        <label for="name">Item Name</label>
        <input type="text" placeholder="Item Name" name="name" required />
        <label for="description">Item Description</label>
        <input
          type="text"
          placeholder="Item Description"
          name="description"
          required
        />
        <label for="price">Item Price</label>

        <input
          type="number"
          name="price"
          min="0"
          max="100"
          placeholder="0"
          required
        />
        <label for="stock">Item Stock</label>
        <input
          type="number"
          name="stock"
          min="0"
          max="100"
          placeholder="0"
          required
        />

        <label for="category">Category:</label>
        <select id="category" name="category">
          <% if (categorys.length > 0){ %> <% categorys.forEach(category => { %>

          <option value="<%= category._id %>"><%= category.name %></option>

          <% }) %> <% } else { %>
          <option value="None">There are no categories items to display</option>
          <% } %>
        </select>

        <input type="reset" value="Reset" />
        <input type="submit" value="Create" />
      </form>
    </main>
  </body>
</html>
